<div class="m-3">
  <%= link_to '← 一覧へ戻る', facilities_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <div class="card mb-4 mx-auto" style="width: 50%">
      <div class="card-header">
        <%=@post_script.title %>
      </div>
      <div class="card-body">
        <div class="card-text mb-0">
          <div>
            <%=@post_script.content %><br>
            <div id="favorite_btn_<%= @post_script.id %>">
              <%= render "favorites/btn", post_script: @post_script %>
            </div>
          </div>
          <div class="mt-3">
            <%= link_to '情報を削除', post_script_path(@post_script.id), method: :delete, data: {confirm: "削除しますか？"},  class:"btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>