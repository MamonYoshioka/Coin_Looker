<% if post_script.favorited_by?(current_end_user) %>
  <%= link_to facility_post_script_favorites_path(facility, post_script), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post_script.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to facility_post_script_favorites_path(facility, post_script), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post_script.favorites.count %> いいね
  <% end %>
<% end %>