<div class="container">
  <h2 class="mt-3 mb-4">
    <i class="fa-solid fa-building-user fa-fade" style="color: #536a93;"></i>
    <span> | </span>会員一覧
  </h2>
  <table class='table table-hover table-inverse'>
      <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th>退会の有無</th>
      </tr>
    </thead>
    <tbody>
        <% @end_users.each do |end_user| %>
          <tr>
            <td><%= end_user.id %></td>
            <td><%= end_user.family_name + end_user.first_name %></td>
            <td><%= end_user.email %></td>
            <% if end_user.is_deleted == false %>
              <td>有効</td>
              <td><%= link_to "利用中", admin_unsubscribe_path(end_user.id), method: :patch, class: "btn btn-success" %></td>
            <% else %>
              <td>退会</td>
              <td><%= link_to "利用停止中", admin_unsubscribe_path(end_user.id), method: :patch, class: "btn btn-danger" %></td>
            <% end %>
          </tr>
        <% end %>
    </tbody>
   </table>
    <%= paginate @end_users %>
</div>